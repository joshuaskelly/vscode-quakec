{
	"name": "quakec",
	"displayName": "QuakeC",
	"description": "A QuakeC Language Extension for VS Code",
	"author": "Joshua Skelton",
	"license": "MIT",
	"version": "0.2.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/joshuaskelly/vscode-quakec"
	},
	"publisher": "joshuaskelly",
	"categories": [],
	"keywords": [],
	"engines": {
		"node": "*",
		"vscode": "^1.39.0"
	},
	"activationEvents": [
		"onLanguage:quakec"
	],
	"main": "./client/src/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "quakec",
				"aliases": [
					"Quake-C",
					"QuakeC",
					"qcc"
				],
				"configuration": "./language-configuration.json",
				"extensions": [
					".qc"
				]
			}
		],
		"grammars": [
			{
				"language": "quakec",
				"scopeName": "source.qc",
				"path": "./client/syntaxes/quakec.plist"
			}
		],
		"configuration": {
			"type": "object",
			"title": "QuakeC Extension Configuration",
			"properties": {
				"quakec.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"quakec.language": {
					"scope": "resource",
					"type": "string",
					"default": "qcc",
					"description": "Controls parser support for various language features."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"mocha": "^8.1.1",
		"@types/node": "^12.12.0",
		"typescript": "^3.9.4"
	}
}
