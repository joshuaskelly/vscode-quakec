{
	"name": "quakec",
	"displayName": "QuakeC",
	"description": "A QuakeC Language Extension for VS Code",
	"author": "Joshua Skelton",
	"license": "MIT",
	"version": "0.2.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/joshuaskelly/vscode-quakec"
	},
	"publisher": "joshuaskelly",
	"categories": [],
	"keywords": [],
	"engines": {
		"node": "*",
		"vscode": "^1.39.0"
	},
	"activationEvents": [
		"onLanguage:quakec"
	],
	"main": "./client/src/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "quakec",
				"aliases": [
					"QuakeC",
					"Quake-C",
					"qcc"
				],
				"configuration": "./language-configuration.json",
				"extensions": [
					".qc"
				]
			}
		],
		"grammars": [
			{
				"language": "quakec",
				"scopeName": "source.qc",
				"path": "./client/syntaxes/quakec.plist"
			}
		],
		"configuration": {
			"type": "object",
			"title": "QuakeC Extension Configuration",
			"properties": {
				"quakec.language": {
					"scope": "resource",
					"type": "string",
					"default": "qcc",
					"description": "Automatically assigns defaults for compiler feature flags based on a specific language."
				},
				"quakec.features": {
					"scope": "resource",
					"type": "object",
					"description": "Feature flags for specific parser features.",
					"properties": {
						"binarySubtractRequiresLeadingWhitespace": {
							"type": "boolean",
							"default": "false",
							"description": "Whether or not the binary - operator requires a whitespace before the right-hand operand if it is a literal"
						}
					}
				}
			}
		}
	},
	"scripts": {
		"deploy": "vsce publish --yarn",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ../parser && npm install && cd ..",
		"test": "mocha */test/**/*.js && node ./server/src/test/runTests.js"
	},
	"devDependencies": {
		"mocha": "^8.4.0",
		"vsce": "^1.88.0",
		"vscode-test": "^1.5.2"
	}
}
