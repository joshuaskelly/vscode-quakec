{
	"parserOptions": {
		"ecmaFeatures": {
			"impliedStrict": true
		},
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"env": {
		"node": true,
		"browser": false
	},
	"extends": [
		"eslint:recommended"
	],
	"rules": {
		"no-var": "error",
		"prefer-const": "warn",
		"no-constant-condition": "off",
		"semi": "error",
		"no-unused-vars": "warn"
	}
}